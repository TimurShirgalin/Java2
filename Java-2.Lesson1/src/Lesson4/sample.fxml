
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="Lesson4.Controller" xmlns:fx="http://javafx.com/fxml" alignment="BOTTOM_CENTER">
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" wrapText="true" editable="false"/>
    <HBox prefHeight="40">
        <TextField fx:id="message" maxHeight="Infinity" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
                   onAction="#action"/>
        <Button maxHeight="Infinity" prefWidth="70" text="Send" onAction="#action"/>
    </HBox>
</VBox>
